{
    "manifest_version": 2,
    "name": "Pretty UW Course Schedule",
    "version": "1.0.1",
    "description": "An improvement to viewing University of Waterloo Schedule of Classes pages",
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_title": "Pretty UW Course Schedule",
        "default_icon": "images/on.png"
    },
    "permissions": [
        "tabs",
        "https://info.uwaterloo.ca/*",
        "http://www.adm.uwaterloo.ca/cgi-bin/cgiwrap/infocour/salook.pl*",
        "http://www.adm.uwaterloo.ca/infocour/CIR/SA/under.html"
    ],
    "content_scripts": [{
        "js": [
            "js/jquery-3.2.1.min.js",
            "js/date.js"
        ],
        "matches": [
            "https://info.uwaterloo.ca/*",
            "http://www.adm.uwaterloo.ca/cgi-bin/cgiwrap/infocour/salook.pl*",
            "http://www.adm.uwaterloo.ca/infocour/CIR/SA/under.html"
        ]
    }],
    "web_accessible_resources": ["images/chosen-sprite.png", "images/chosen-sprite@2x.png", "images/on.png", "images/off.png"]
}